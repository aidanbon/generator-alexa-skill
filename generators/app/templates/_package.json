{
  "name": "alexa-skill-<%= fileName %>",
  "version": "0.0.0",
  "description": "An Alexa Skill for AWS Lambda",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build:pack": "rm -rf ./dist && webpack --config ./config/webpack.config.js -p",
    "build:zip": "bestzip dist/package.zip dist/index.js LICENSE.md README.md SAMPLES schema.json",
    "build": "npm run build:pack && npm run build:zip",
    "test": "mocha --compilers js:babel/register --reporter progress",
    "prepublish": "npm test && npm run build"
  },
  "dependencies": {
    "alexa-lambda-skill": "*"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-loader": "^5.3.2",
    "bestzip": "^1.1.2",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "mocha": "^2.3.3",
    "webpack": "^1.12.2"
  }
}
